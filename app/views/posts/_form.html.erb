<%= content_tag :section, class: 'mx-auto max-w-screen-xl', data: { controller: 'create-post' } do %>
  <div class="py-8 px-4 max-w-2xl lg:py-16">
    <%= form_for post, url: attach_image_posts_path, data: { create_post_target: 'form' } do |f| %>
      <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
        <div class="sm:col-span-2">
          <%= render Forms::LabelComponent.new(form: f, method: :image) %>
          <%= render Forms::FileComponent.new(form: f, method: :image) %>
          <p class="mt-1 text-sm text-gray-500">PNG, JPG</p>
          <%= render Forms::ErrorsComponent.new(resource: post, method: :image) %>
        </div>
      </div>
      <div>
        <% ActsAsTaggableOn::Tag.all.each do |tag| %>
          <label class="inline-flex items-center px-3 py-1.5 mt-4 mr-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-full cursor-pointer">
            <%= check_box_tag 'post[tag_ids][]', tag.id, post.tag_ids.include?(tag.id), id: "post_tag_ids_#{tag.id}" %>
            <span class="ml-2"><%= tag.name %></span>
          </label>
        <% end %>
      </div>
      <%= f.submit class: 'hidden inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white bg-primary-700 rounded-lg focus:ring-4 focus:ring-primary-200 hover:bg-primary-800' %>
    <% end %>
  </div>
<% end %>
